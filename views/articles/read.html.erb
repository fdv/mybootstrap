<article id="article-<%= @article.id %>" class="h-entry row">
  <div class='col-lg-8 col-lg-offset-2 page-header' >
    <h1 class='p-name'><%= link_to_permalink(@article,@article.title) %></h1>
<!--
    <p>
      <small>Frédéric de Villamil</small>
      <img src='/images/theme/frederic-de-villamil-circle.png' alt="Frédéric de Villamil" class="circular" />
      <small><time>on <%= display_date(@article.published_at) %></time></small>
    </p>
    -->
  </div>
  <div class='col-lg-8 col-lg-offset-2'>
    
    <%= @article.html(:body) %>
    <%= @article.html(:extended) %>
<div id="mc_embed_signup" class="well well-sm">
  <img src="/images/theme/platypus-email.png" class="alignright" alt="Perry the Platypus wants you to subscribe now!" title="Perry the Platypus wants you to subscribe now!" class='newsletter'>
  Even if you don't visit my site on a regular basis, you can get the latest posts delivered to you for free via Email:
  <form action="//t37.us4.list-manage.com/subscribe/post?u=dbdd088684988408725cd5ab2&amp;id=f9ba4f0896" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="form-inline" target="_blank" novalidate="">
    <div class="form-group">
      <div class="input-group">
        <input type="email" value="" name="EMAIL" class="form-control" id="mce-EMAIL" placeholder="Enter email">
      </div>
    </div>
    <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="btn btn-sm btn-default">
    <div style="position: absolute; left: -5000px;"><input type="text" name="b_dbdd088684988408725cd5ab2_f9ba4f0896" tabindex="-1" value=""></div>
  </form>
</div>
    <footer>
      <div class='row'>
      <div class='col-lg-6'>
        <small>FREDERIC DE VILLAMIL <time>on <%= display_date(@article.published_at) %></time></small>
      </div>
      
      <div class='col-lg-6 text-right'><small><%= tag_links(@article, "In") %></small></div>
    </div>
      <hr />
      <div class='row'>
        <div class='col-lg-12 text-right'>
            <a target="_blank" class='icon' rel="nofollow" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=400,width=700');return false;" href="https://twitter.com/share?url=<%= URI.encode(@article.permalink_url) %>&amp;text=<%= URI.escape(@article.title) %>&amp;via=fdevillamil"><img src="/images/theme/icon_share_twitter.png" alt="twitter" title="Share this on Twitter"></a>
            <a target="_blank" class='icon' rel="nofollow" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=500,width=700');return false;" href="https://www.facebook.com/sharer.php?u=<%= URI.encode(@article.permalink_url) %>&amp;t=<%= URI.escape(@article.title) %>"><img src="/images/theme/icon_share_facebook.png" alt="Facebook" title="Share this on Facebook"></a>
            <a target="_blank" class='icon' rel="nofollow" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=450,width=650');return false;" href="https://plus.google.com/share?url=<%= URI.encode(@article.permalink_url) %>&amp;hl=fr"><img src="/images/theme/icon_share_googleplus.png" alt="Google+" title="Share this on Google+"></a>
            <a target="_blank" class='icon' rel="nofollow" onclick="javascript:window.open(this.href, '','menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=450,width=650');return false;" href="https://www.linkedin.com/shareArticle?mini=true&amp;url=<%= URI.encode(@article.permalink_url) %>&amp;title=<%= URI.escape(@article.title) %>"><img src="/images/theme/icon_share_linkedin.png" alt="Linkedin" title="Share this on Linkedin"></a>
        </div>
      </div>
      <% related = render_similar_posts @article %>
      <% unless related.nil? || related.empty? %>
      <div id='related' class='row'>
        <div class='col-lg-12'>
          <h3>If you liked <em><%= @article.title %></em>, you should read:</h3>
        </div>
      </div>
      <div class='row'>
        <% r = 1 %>
        <% related.each do |article| %>
        <div class='col-lg-6'>
          <%= link_to_permalink(article, display_thumbnail(article)) %>
          <small><%= link_to article.title, article.permalink_url %></small>
        </div>
        <% r+=1 %>
        <% end %>
      </div>
      <% end %>
    </footer>
  </div>
</article>
