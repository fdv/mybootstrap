<% if @i == 0%>
  <article id="article-<%= article.id %>" class='h-entry hentry h-as-note'>
    <header>
      <h2 class='page-header'><%= (controller.controller_name == 'redirect') ? article.title : link_to_permalink(article,article.title) %></h2>      
    </header>
  
    <%= render 'articles/protected_article_content', { :article => article } %>

    <footer class='meta row hidden-phone'>
      <div class='span6'>
        <p>
          <small><%= _("Publié le") %>
            <%= display_date(article.published_at) %> à <%= display_time(article.published_at) %>
            <%= tag_links(article, "dans") unless article.tags.empty? %>
          </small>          
          </p>
      </div>
   </footer>
  </article>
<% @i = 1 %>
<% else %>
<div id="article-<%= article.id %>" class='h-entry hentry h-as-note'>
  <h3><%= link_to_permalink(article,article.title) %></h3>
  
  <% s = truncate(article.html(:body).strip_html, length: 800, separator: ' ') 
      article.body = s
      %>
        <%= article.html(:body) %>
        <footer class='meta row hidden-phone'>
          <div class='col-lg-12'>
            <p>
              <small><%= _("Publié le") %>
                <%= display_date(article.published_at) %> à <%= display_time(article.published_at) %>
                <%= tag_links(article, "dans") unless article.tags.empty? %>
              </small>          
              </p>
          </div>
       </footer>
</div>
<% end %>
<hr />